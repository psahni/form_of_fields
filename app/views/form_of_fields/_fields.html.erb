<div class="form_fields">
    <div class="field">
      <%=f.label 'Field Type'%>
      <%=f.select :field_type, options_for_select(['text_field', 'check_box', 'radio_button', 'file_field', 'text_area']), :prompt => "--Select--"%>
    </div>

    <div class="field">
      <%=f.label 'Field Label'%>
      <%=f.text_field :field_label%>
    </div>

    <div class="field">
        <%= f.hidden_field :_destroy %>
        <%= link_to 'remove', '#', class: 'remove_fields' %>
    </div>
</div>